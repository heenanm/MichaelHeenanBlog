@model MichaelHeenanBlog.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Admin Home page";
}

    <div class="bg-light">
        <h1 class="display-4 text-center">Blog!</h1>
        @*
        @foreach (var blogpost in Model.BlogPostSummarys)
        {
