        <table class="table">
            @foreach (var blogpost in Model.BlogPostSummarys)
            {
                <tr>
                    <td>@blogpost.Title</td>
                    <td>@blogpost.Body</td>
                    <td>
                        <a class="btn btn-outline-primary">
                            Edit Post
                        </a>
                        <a class="btn btn-outline-primary">
                            Delete Post
                        </a>
                    </td>
                </tr>
            }
        </table>

    </div>