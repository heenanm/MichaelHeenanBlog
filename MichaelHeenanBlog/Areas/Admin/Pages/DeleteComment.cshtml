@page "{commentId:Guid}"
@model MichaelHeenanBlog.Areas.Admin.Pages.DeleteCommentModel
@{
}

    <form method="post">
        <p>Are you sure you want to delete this Comment?</p>
        <input type="hidden" asp-for="CommentId" value="@Model.CommentId" />
        <button type="submit" class="btn btn-primary">Yes</button>
        <a asp-area="" asp-page="/ViewSingleBlogPost" asp-route-blogPostId="@Model.CommentBlogPostId" class="btn btn-primary">No</a>
    </form>

<div class="card mt-4 border-primary">
    <div class="card-body">

        <div>
            <p><span class="text-monospace">@Model.CommentData.Author</span> <span class="text-monospace">@Model.CommentData.Date</span></p>
        </div>

        <p>@Model.CommentData.Body</p>
    </div>
</div>
    