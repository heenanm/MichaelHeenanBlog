@page "{blogPostId:Guid}"
@model MichaelHeenanBlog.Areas.Admin.Pages.EditPostModel
@{
}

<h1>Edit Post</h1>

<form method="post">
    <p>Save Changes?</p>
    <input type="hidden" asp-for="BlogPostId" value="@Model.BlogPost.Id" />
    <button type="submit" class="btn btn-primary">Yes</button>
    <a asp-area="Admin" asp-page="/Index" class="btn btn-primary">No</a>

    <div class="form-group">
        <label>
            Title
            <input asp-for="PostContent.Title" type="text" class="form-control" aria-describedby="titleHelp" value="@Model.BlogPost.Title" />
        </label>
        <small id="titleHelp" class="form-text text-muted">The title of the blog post</small>
    </div>
    <div class="form-group">
        <label>
            Body
            <textarea asp-for="PostContent.Body" type="text" class="form-control " aria-describedby="bodyHelp">@Model.BlogPost.Body</textarea>
        </label>
        <small id="bodyHelp" class="form-text text-muted">The body of the blog post</small>
    </div>
    <div class="form-group">
        <label>
            Tags
            <input asp-for="PostContent.Tags" type="text" class="form-control" aria-describedby="tagHelp" placeholder="tags">
        </label>
        <small id="tagHelp" class="form-text text-muted">The tags of the blogpost (comma separated list)</small>
    </div>
</form>



