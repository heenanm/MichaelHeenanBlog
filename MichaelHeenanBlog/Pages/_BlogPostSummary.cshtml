@using MichaelHeenanBlog.Data
@model BlogPostSummary
@{
}

    <div class="card">
        <div class="card-header">
            <h3>@Model.Title</h3>
        </div>
        <div class="card-body">
            <p>@Model.Body</p>
        </div>

        @if (Model.Tags == null)
        {
            <div class="card-footer">
                <p>Blog Post has no tags</p>
            </div>
        }
        else
        {
            @foreach (var tag in Model.Tags)
            {
                <div class="card-footer">
                    <a class="btn btn-outline-primary"
                       asp-page=""
                       asp-route-Id="">
                        Tags
                    </a>
                </div>
            }
        }
    </div>